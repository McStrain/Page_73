<Window x:Class="Page_73.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="button1" Content="Show a message" HorizontalAlignment="Left" Margin="91,30,0,0" VerticalAlignment="Top" Width="103" Height="21" Click="button1_Click"/>
        <Button x:Name="button2"  Content="If/Else" HorizontalAlignment="Left" Margin="80,30,0,0" VerticalAlignment="Top" Width="75" Height="21" Grid.Column="1" Click="button2_Click"/>
        <Button x:Name="button3" Content="Another conditional test" HorizontalAlignment="Left" Margin="56,34,0,0" VerticalAlignment="Top" Width="167" Height="21" Grid.Row="1" Click="button3_Click"/>
        <Button x:Name="button4" Content="A loop" HorizontalAlignment="Left" Margin="80,34,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Height="21" Grid.Column="1" Click="button4_Click"/>

        <TextBlock x:Name="myLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
